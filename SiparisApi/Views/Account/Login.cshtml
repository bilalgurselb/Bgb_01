@using Microsoft.AspNetCore.Identity
@inject IHttpContextAccessor HttpContextAccessor

@{
    var isAuthenticated = HttpContextAccessor.HttpContext?.User?.Identity?.IsAuthenticated ?? false;
    string userName = "";
    string userRole = "";
    string currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    string currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";

    if (isAuthenticated)
    {
        userName = HttpContextAccessor.HttpContext.User.Claims.FirstOrDefault(c => c.Type == "NameSurname")?.Value
            ?? HttpContextAccessor.HttpContext.User.Identity?.Name
            ?? "";

        userRole = HttpContextAccessor.HttpContext.User.Claims.FirstOrDefault(c => c.Type == "Role")?.Value ?? "";

        var hour = DateTime.Now.Hour;
        ViewBag.Greeting = hour < 12 ? "Günaydın" : hour < 18 ? "Merhaba" : "İyi akşamlar";
    }
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewData["Title"] - SINTAN CHEMICALS</title>

    <!-- Bootstrap & FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Inter', sans-serif;
            padding-bottom: 70px; /* alt menü için boşluk bırak */
        }

        .navbar-brand {
            font-weight: 600;
            font-size: 1.1rem;
        }

        /* 🔹 Aktif menü vurgusu */
        .nav-link.active {
            background-color: rgba(255, 255, 255, 0.2);
            border-radius: 6px;
        }

        footer {
            border-top: 1px solid #ddd;
            font-size: 0.85rem;
            color: #777;
            margin-top: 40px;
        }

        /* 📱 Mobil optimize */
        @@media (max-width: 768px) {
            .navbar-brand

        {
            font-size: 1rem;
        }

        .greeting-text {
            display: block;
            font-size: 0.85rem;
            text-align: right;
        }

        .navbar .btn {
            padding: 6px 10px;
            font-size: 0.85rem;
        }

        }

        /* 🔹 Mobil alt menü */
        .mobile-nav {
            display: none;
        }

        @@media (max-width: 768px) {
            .mobile-nav

        {
            display: flex;
            justify-content: space-around;
            align-items: center;
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 60px;
            background-color: #0d6efd;
            box-shadow: 0 -2px 6px rgba(0,0,0,0.15);
            z-index: 9999;
        }

        .mobile-nav a {
            color: white;
            text-align: center;
            font-size: 0.8rem;
            text-decoration: none;
            flex: 1;
        }

            .mobile-nav a.active {
                color: #ffd966;
            }

        .mobile-nav i {
            font-size: 1.3rem;
            display: block;
        }

        }
    </style>
</head>
<body>
    <!-- 🔹 ÜST NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm px-3">
        <div class="container-fluid">
            <a class="navbar-brand text-white" asp-controller="OrdersUIList" asp-action="Index">
                🧾 SINTAN CHEMICALS
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Menüyü Aç/Kapat">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav align-items-lg-center">
                    <li class="nav-item">
                        <a class="nav-link text-white @(currentController == "OrdersUIList" && currentAction == "Index" ? "active" : "")"
                           asp-controller="OrdersUIList" asp-action="Index">
                            <i class="fas fa-list"></i> Siparişler
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-white @(currentController == "OrdersUIList" && currentAction == "Create" ? "active" : "")"
                           asp-controller="OrdersUIList" asp-action="Create">
                            <i class="fas fa-plus-circle"></i> Yeni Sipariş
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-white @(currentController == "UsersUI" ? "active" : "")"
                           asp-controller="UsersUI" asp-action="Manage">
                            <i class="fas fa-user"></i> Kullanıcı
                        </a>
                    </li>

                    @if (isAuthenticated)
                    {
                        <li class="nav-item ms-lg-3 text-white greeting-text">
                            @ViewBag.Greeting <strong>@userName</strong> <small>(@userRole)</small>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-light ms-2 text-dark">
                                    <i class="fas fa-sign-out-alt"></i> Çıkış
                                </button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a asp-controller="Account" asp-action="Login" class="btn btn-sm btn-light text-dark">
                                <i class="fas fa-sign-in-alt"></i> Giriş Yap
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- 🔹 ANA İÇERİK -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- 🔹 ALT SABİT MOBİL MENÜ -->
    <div class="mobile-nav">
        <a asp-controller="OrdersUIList" asp-action="Index"
           class="@(currentController == "OrdersUIList" && currentAction == "Index" ? "active" : "")">
            <i class="fas fa-list"></i>
            <span>Liste</span>
        </a>

        <a asp-controller="OrdersUIList" asp-action="Create"
           class="@(currentController == "OrdersUIList" && currentAction == "Create" ? "active" : "")">
            <i class="fas fa-plus-circle"></i>
            <span>Yeni</span>
        </a>

        <a asp-controller="UsersUI" asp-action="Manage"
           class="@(currentController == "UsersUI" ? "active" : "")">
            <i class="fas fa-user"></i>
            <span>Hesap</span>
        </a>

        <a asp-controller="Account" asp-action="Logout">
            <i class="fas fa-sign-out-alt"></i>
            <span>Çıkış</span>
        </a>
    </div>

    <footer class="footer text-muted text-center py-2">
        © @DateTime.Now.Year SINTAN CHEMICALS — <small>Bilal Börekci</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
