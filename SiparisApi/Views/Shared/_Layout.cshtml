@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@inject IHttpContextAccessor HttpContextAccessor

@{
    var httpContext = HttpContextAccessor?.HttpContext;
    var user = httpContext?.User;
    var isAuthenticated = user?.Identity?.IsAuthenticated ?? false;

    string userName = User?.Claims.FirstOrDefault(c => c.Type == "NameSurname")?.Value ?? "";
 //   string userRole = User?.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role || c.Type == "Role")?.Value ?? "";
    string userRole = User.Claims.FirstOrDefault(c =>
       c.Type == ClaimTypes.Role ||
       c.Type.Equals("role", StringComparison.OrdinalIgnoreCase) ||
       c.Type.Equals("Role", StringComparison.OrdinalIgnoreCase)
   )?.Value ?? "";

        var hour = DateTime.Now.Hour;
        var greeting = hour < 12 ? "Günaydın" :
                   hour > 17 ? "İyi akşamlar" : "Merhaba";   
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewData["Title"] - SINTAN CHEMICALS</title>
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico" />
    <!-- Bootstrap & FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
   
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark shadow-sm px-2" style="background-color:#0054A6; position: relative;">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <a class="navbar-brand d-flex align-items-center text-white" href="@Url.Action("Index", "OrdersUIList")">
                        <img src="/images/logo_nav.png" alt="Sintan Logo" style="height:32px; margin-right:8px;">
                        <span class="fw-semibold">SINTAN CHEMICALS</span>
                    </a>
                    </div>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Menüyü Aç/Kapat">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav align-items-lg-center">                        
                        <li class="nav-item">
                            <a class="nav-link nav-neworder text-white" href="@Url.Action("Create", "OrdersUIList")">
                                <i class="fas fa-plus-circle"></i> <strong>Yeni Sipariş</strong>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-sipa text-white" href="@Url.Action("Index", "OrdersUIList")">
                                <i class="fas fa-list"></i> Siparişler
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-admin text-white" asp-controller="UsersUI" asp-action="Manage">
                                <i class="fas fa-user-shield""></i>
                                @(userRole == "Admin" ? "Yönetim Paneli" : "Kullanıcı Bilgilerim")
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Logout", "Account")" class="btn btn-sm btn-light text-dark">
                                <i class="fas fa-sign-out-alt"></i> Çıkış
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        @if (isAuthenticated)
        {
            <div class="greeting-bar">

                <div class="greet-left">
                    <span class="greet-text">
                        @greeting
                        <strong class="user-name-limit">@userName</strong>
                        <span class="user-role-badge">@userRole</span>
                    </span>
                </div>

                <a href="@Url.Action("Create", "OrdersUIList")" class="greeting-neworder">
                    <i class="fas fa-plus-circle"></i> Yeni Sipariş
                </a>
            </div>
            }
    </header>
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted text-center py-2">
        © @DateTime.Now.Year SINTAN CHEMICALS by <small>Bilal Börekci</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
    <script>
               (function () {
          function getCookie(name) {
            return document.cookie
              .split('; ')
              .find(row => row.startsWith(name + '='))?.split('=')[1];
          }
          const cookieToken = getCookie('AccessToken');
          if (cookieToken && !sessionStorage.getItem("AccessToken")) {
            sessionStorage.setItem('AccessToken', cookieToken);
          }
        })();
        // 🔹 Aşağı kaydırarak yenilemeyi engelle
        let lastTouchY = 0;
        let isPullingDown = false;

        document.addEventListener("touchstart", function (e) {
            if (e.touches.length !== 1) return;
            lastTouchY = e.touches[0].clientY;
            isPullingDown = (window.scrollY === 0);
        });

        document.addEventListener("touchmove", function (e) {
            const currentY = e.touches[0].clientY;
            const diffY = currentY - lastTouchY;

            if (isPullingDown && diffY > 0) {
                e.preventDefault(); // ⛔️ sayfa yenilemeyi engelle
            }
        }, { passive: false });
    </script>
</body>
</html>
