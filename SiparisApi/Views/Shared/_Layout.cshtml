@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SINTAN CHEMICALS</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/a2d9a6ef5c.js" crossorigin="anonymous"></script>
</head>
<body>
    <header class="navbar">
        <div class="nav-left">
            <img src="~/images/logo_nav.png" alt="SINTAN" class="nav-logo" />
            <button class="menu-toggle" onclick="toggleMenu()">☰</button>
        </div>
        <nav class="nav-menu" id="mainMenu">
            <a href="/Dashboard" class="nav-item"><i class="fas fa-home"></i> Ana Sayfa</a>
            <a href="/Orders" class="nav-item"><i class="fas fa-list"></i> Siparişler</a>
            <a href="/Orders/Create" class="nav-item"><i class="fas fa-plus-circle"></i> Yeni Sipariş</a>
            <a href="/Manage" class="nav-item"><i class="fas fa-users-cog"></i> Kullanıcılar</a>
            <a href="/Account/Logout" class="nav-item logout"><i class="fas fa-sign-out-alt"></i> Çıkış</a>
        </nav>
    </header>

    <main class="main-content">
        @RenderBody()
    </main>

    <footer class="footer">
        <p>© @DateTime.Now.Year SINTAN CHEMICALS by Bilal G. Borekci - Tüm hakları saklıdır.</p>
    </footer>

    <script>
        function toggleMenu() {
            const menu = document.getElementById("mainMenu");
            menu.classList.toggle("active");
        }
    </script>
</body>
</html>
