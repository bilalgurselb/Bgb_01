@using System.Security.Claims
@{
    var userName = User.FindFirst("name")?.Value ?? "Ziyaretçi";
    var userRole = User.FindFirst("role")?.Value ?? "User";
    var userEmail = User.FindFirst(ClaimTypes.Email)?.Value;
    var isAuthenticated = User.Identity?.IsAuthenticated ?? false;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewData["Title"] - SINTAN CHEMICALS Kimya</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <header class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm px-3">
        <a class="navbar-brand fw-bold text-white" asp-controller="OrdersUIList" asp-action="Index">
            🧾 Sintan Kimya
        </a>

        <div class="ms-auto d-flex align-items-center text-white">
            @if (isAuthenticated)
            {
                <span class="me-3">
                    Hoş geldiniz <strong>@userName</strong> <small>(@userRole)</small>
                </span>
                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-light text-dark">Çıkış</button>
                </form>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login" class="btn btn-sm btn-light text-dark">Giriş Yap</a>
            }
        </div>
    </header>

    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom shadow-sm">
        <div class="container-fluid">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="OrdersUIList" asp-action="Index">📦 Sipariş Listesi</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="OrdersUI" asp-action="Create">➕ Yeni Sipariş</a>
                </li>

                @if (userRole == "Admin" || userRole == "Yönetici")
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="AdminUI" asp-action="Dashboard">⚙️ Yönetim Paneli</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="AdminUI" asp-action="Logs">🪵 Loglar</a>
                    </li>
                }

                @if (userRole == "Admin")
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="UsersUI" asp-action="Manage">👤 Kullanıcı Yönetimi</a>
                    </li>
                }
            </ul>

            @if (isAuthenticated)
            {
                <div class="d-flex align-items-center">
                    <span id="orderBadge" class="badge bg-warning text-dark me-2" style="display:none;">
                        🔔 Yeni güncellemeler var
                    </span>
                </div>
            }
        </div>
    </nav>

    <div class="container py-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-light border-top py-3 mt-auto">
        <div class="container text-center">
            <small class="text-muted">© @DateTime.Now.Year SINTAN CHEMICALS | Sipariş Yönetim Sistemi</small>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // 🔔 Basit ön bildirim (demo amaçlı) — istersen API'den dinamik hale getirebiliriz.
        document.addEventListener("DOMContentLoaded", function () {
            fetch('/api/orders/list')
                .then(r => r.ok ? r.json() : [])
                .then(data => {
                    if (data && data.some(o => o.isNew || o.isUpdated)) {
                        document.getElementById("orderBadge").style.display = "inline-block";
                    }
                })
                .catch(err => console.log("Bildirim kontrol hatası:", err));
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
