@using Microsoft.AspNetCore.Identity
@inject IHttpContextAccessor HttpContextAccessor

@{
    var isAuthenticated = HttpContextAccessor.HttpContext?.User?.Identity?.IsAuthenticated ?? false;
    string userName = "";
    string userRole = "";

    if (isAuthenticated)
    {
        userName = HttpContextAccessor.HttpContext.User.Claims.FirstOrDefault(c => c.Type == "NameSurname")?.Value
            ?? HttpContextAccessor.HttpContext.User.Identity?.Name
            ?? "";

        userRole = HttpContextAccessor.HttpContext.User.Claims.FirstOrDefault(c => c.Type == "Role")?.Value ?? "";

        var hour = DateTime.Now.Hour;
        ViewBag.Greeting = hour < 12 ? "Günaydın" : hour < 18 ? "Merhaba" : "İyi akşamlar";
    }
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewData["Title"] - SINTAN CHEMICALS</title>
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico" />
    <!-- Bootstrap & FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)

   
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark shadow-sm px-2" style="background-color:#0054A6;">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <a class="navbar-brand d-flex align-items-center mx-auto mx-lg-0 text-white" asp-controller="OrdersUIList" asp-action="Index">
                    <img src="~/images/logo_nav.png" alt="SINTAN" class="brand-logo me-2"/>
                    <span class="fw-semibold d-none d-sm-inline" style="letter-spacing:0.5px;">SINTAN CHEMICALS</span>
                </a>
               
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Menüyü Aç/Kapat">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav align-items-lg-center">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="OrdersUIList" asp-action="Index">
                                <i class="fas fa-list"></i> Siparişler
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="OrdersUIList" asp-action="Create">
                                <i class="fas fa-plus-circle" style="color:#F47C20;"></i> Yeni Sipariş
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="UsersUI" asp-action="Manage">
                                <i class="fas fa-user" style="color:#5BB85D;"></i> Kullanıcı
                            </a>
                        </li>
                        @if (isAuthenticated)
                        {
                            <li class="nav-item ms-lg-3 text-white greeting-text small">
                                <span>
                                @ViewBag.Greeting <strong>@userName</strong> <small>(@userRole)</small>
                                </span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-light ms-2 text-dark">
                                        <i class="fas fa-sign-out-alt"></i> Çıkış
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a asp-controller="Account" asp-action="Login" class="btn btn-sm btn-light text-dark">
                                    <i class="fas fa-sign-in-alt"></i> Giriş Yap
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted text-center py-2">
        © @DateTime.Now.Year SINTAN CHEMICALS — <small>Bilal Börekci</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
