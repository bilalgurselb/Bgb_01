@using Microsoft.AspNetCore.Identity
@inject IHttpContextAccessor HttpContextAccessor

@{
    var isAuthenticated = HttpContextAccessor.HttpContext?.User?.Identity?.IsAuthenticated ?? false;
    string userName = "";
    string userRole = "";

    if (isAuthenticated)
    {
        // Kullanıcı adı ve rol bilgilerini User.Claims üzerinden çekiyoruz
        userName = HttpContextAccessor.HttpContext.User.Claims.FirstOrDefault(c => c.Type == "NameSurname")?.Value
            ?? HttpContextAccessor.HttpContext.User.Identity?.Name
            ?? "";

        userRole = HttpContextAccessor.HttpContext.User.Claims.FirstOrDefault(c => c.Type == "Role")?.Value ?? "";

        // Saat bazlı selamlama
        var hour = DateTime.Now.Hour;
        ViewBag.Greeting = hour < 12 ? "Günaydın" : hour < 18 ? "Merhaba" : "İyi akşamlar";
    }
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewData["Title"] - SINTAN CHEMICALS</title>
  
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    

</head>
<body>
    <header class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm px-3">
        <a class="navbar-brand fw-bold text-white" asp-controller="OrdersUIList" asp-action="Index">
            🧾 SINTAN CHEMICALS
        </a>

        <div class="ms-auto d-flex align-items-center text-white">
            @if (isAuthenticated)
            {
                <span class="me-3">
                    @ViewBag.Greeting <strong>@userName</strong> <small>(@userRole)</small>
                </span>
                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-light text-dark">Çıkış</button>
                </form>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login" class="btn btn-sm btn-light text-dark">Giriş Yap</a>
            }
        </div>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center py-2">
        © 2025 SINTAN CHEMICALS — <small>Bilal Börekci</small>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
