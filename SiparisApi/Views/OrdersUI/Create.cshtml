@{
    ViewData["Title"] = "Yeni Sipariş Oluştur";
    Layout = "_Layout";
}

<h2>Layout Testingen</h2>
<div class="page-header">
    <h1 class="page-title"><i class="fas fa-plus-circle"></i> Yeni Sipariş</h1>
    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Listeye Dön</a>
</div>

<div class="form-card">
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label>Müşteri Adı</label>
            <input type="text" name="CustomerName" class="form-control" required />
        </div>

        <div class="form-group">
            <label>Ürün</label>
            <input type="text" name="ProductName" class="form-control" required />
        </div>

        <div class="form-group">
            <label>Miktar</label>
            <input type="number" name="Quantity" class="form-control" required />
        </div>

        <div class="form-group">
            <label>Durum</label>
            <select name="Status" class="form-control">
                <option>Hazırlanıyor</option>
                <option>Teslim Edildi</option>
                <option>İptal</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Kaydet</button>
    </form>
</div>
