@model SiparisApi.Models.OrderHeader
@{
    ViewData["Title"] = "Yeni Sipariş Oluştur";
    Layout = "_Layout";
}

<div class="page-header d-flex justify-content-between align-items-center mb-3">
    <h3 class="page-title"><i class="fas fa-plus-circle text-primary"></i> Yeni Sipariş</h3>
    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Listeye Dön</a>
</div>

<div class="form-card">
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <!-- 🧾 MÜŞTERİ -->
        <div class="form-group mb-3">
            <label class="form-label">Müşteri</label>
            <select asp-for="CustomerId" class="form-select"
                    asp-items="@(new SelectList(ViewBag.Customers, "Id", "CARI_ISIM"))">
                <option value="">Seçiniz...</option>
            </select>
            <span asp-validation-for="CustomerId" class="text-danger"></span>
        </div>

        <!-- 🚚 Teslimat Alanları -->
        <div class="row g-2 mb-3">
            <div class="col">
                <label>Port of Delivery</label>
                <input asp-for="PortOfDelivery" class="form-control" />
            </div>
            <div class="col">
                <label>Place of Delivery</label>
                <input asp-for="PlaceOfDelivery" class="form-control" />
            </div>
        </div>

        <hr />
        <h5 class="mb-2">📦 Kalemler</h5>
        <div id="items">
            <!-- 🔸 Kalem 1 -->
            <div class="card p-2 mb-2 shadow-sm">
                <div class="row g-2">
                    <div class="col-md-5">
                        <label>Ürün</label>
                        <select name="Items[0].ProductId" class="form-select"
                                asp-items="@(new SelectList(ViewBag.Products, "Id", "STOK_ADI"))"></select>
                    </div>
                    <div class="col-md-3">
                        <label>Miktar</label>
                        <input name="Items[0].Quantity" type="number" step="0.01" inputmode="decimal" class="form-control" required />
                    </div>
                    <div class="col-md-3">
                        <label>Fiyat</label>
                        <input name="Items[0].Price" type="number" step="0.01" inputmode="decimal" class="form-control" required />
                    </div>
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-primary mt-3 w-100">
            <i class="fas fa-save"></i> Kaydet
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
