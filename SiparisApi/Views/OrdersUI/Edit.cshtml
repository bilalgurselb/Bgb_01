@model SiparisApi.Models.Order
@{
    ViewData["Title"] = "Sipariş Düzenle";
    Layout = "_Layout";
}

<div class="page-header">
    <h1 class="page-title"><i class="fas fa-edit"></i> Sipariş Düzenle</h1>
    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Listeye Dön</a>
</div>

<div class="form-card">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label>Müşteri Adı</label>
            <input asp-for="CustomerName" class="form-control" />
        </div>

        <div class="form-group">
            <label>Ürün</label>
            <input asp-for="ProductName" class="form-control" />
        </div>

        <div class="form-group">
            <label>Miktar</label>
            <input asp-for="Quantity" class="form-control" />
        </div>

        <div class="form-group">
            <label>Durum</label>
            <select asp-for="Status" class="form-control">
                <option value="Hazırlanıyor">Hazırlanıyor</option>
                <option value="Teslim Edildi">Teslim Edildi</option>
                <option value="İptal">İptal</option>
            </select>
        </div>

        <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Güncelle</button>
    </form>
</div>
