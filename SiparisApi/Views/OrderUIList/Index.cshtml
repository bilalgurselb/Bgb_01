@{
    ViewData["Title"] = "Sipariş Listesi";
}

<h1 class="page-title">Sipariş Listesi</h1>

<div class="table-wrapper">
    <table class="data-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Müşteri</th>
                <th>Ürün</th>
                <th>Miktar</th>
                <th>Durum</th>
                <th>Tarih</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.CustomerName</td>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>
                        @if (item.Status == "Tamamlandı")
                        {
                            <span class="status success">Teslim Edildi</span>
                        }
                        else if (item.Status == "Hazırlanıyor")
                        {
                            <span class="status warning">Hazırlanıyor</span>
                        }
                        else
                        {
                            <span class="status danger">İptal</span>
                        }
                    </td>
                    <td>@item.OrderDate.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
