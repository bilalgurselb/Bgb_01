@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Sipariş Listesi";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="fw-bold text-primary mb-0">Sipariş Listesi</h4>
        <a href="/OrdersUI/Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Yeni Sipariş
        </a>
    </div>

    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Müşteri</th>
                            <th>Ürün</th>
                            <th>Adet</th>
                            <th>Tarih</th>
                            <th class="text-end">İşlem</th>
                        </tr>
                    </thead>
                    <tbody id="ordersTableBody">
                        <tr><td colspan="6" class="text-center text-muted">Veriler yükleniyor...</td></tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", async function () {
            const tbody = document.getElementById("ordersTableBody");
            const baseUrl = window.location.origin;

            try {
                const response = await fetch(baseUrl + "/api/orders", {
                    headers: {
                        "Authorization": "Bearer " + localStorage.getItem("accessToken")
                    }
                });

                if (!response.ok) throw new Error("API yanıtı başarısız");

                const orders = await response.json();
                if (orders.length === 0) {
                    tbody.innerHTML = `<tr><td colspan="6" class="text-center text-muted">Henüz sipariş yok.</td></tr>`;
                    return;
                }

                tbody.innerHTML = orders.map(o => `
                    <tr>
                        <td>${o.id}</td>
                        <td>${o.customerName}</td>
                        <td>${o.productName}</td>
                        <td>${o.quantity}</td>
                        <td>${new Date(o.createdAt || o.date).toLocaleDateString('tr-TR')}</td>
                        <td class="text-end">
                            <a href="/OrdersUI/Edit/${o.id}" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-pencil-square"></i> Düzenle
                            </a>
                        </td>
                    </tr>
                `).join("");
            } catch (err) {
                tbody.innerHTML = `<tr><td colspan="6" class="text-center text-danger">Bağlantı hatası: ${err.message}</td></tr>`;
            }
        });
    </script>
}
