@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<div class="page-header">
    <h1 class="page-title">Kullanıcı Yönetimi</h1>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-user-plus"></i> Yeni Kullanıcı</a>
</div>

<div class="table-wrapper">
    <table class="data-table">
        <thead>
            <tr>
                <th>#</th>
                <th>Ad Soyad</th>
                <th>E-posta</th>
                <th>Rol</th>
                <th>Durum</th>
                <th>Son Giriş</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>
                        @if (user.IsActive)
                        {
                            <span class="status success">Aktif</span>
                        }
                        else
                        {
                            <span class="status danger">Pasif</span>
                        }
                    </td>
                    <td>@user.LastLogin?.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-success"><i class="fas fa-edit"></i></a>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
