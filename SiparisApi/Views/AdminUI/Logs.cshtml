@{
    ViewData["Title"] = "Sistem Günlükleri";
}

<h1 class="page-title">Sistem Günlükleri</h1>

<div class="table-wrapper">
    <table class="data-table">
        <thead>
            <tr>
                <th>Tarih</th>
                <th>Seviye</th>
                <th>Kaynak</th>
                <th>Mesaj</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var log in Model)
            {
                var levelClass = log.Level switch
                {
                    "Error" => "danger",
                    "Warning" => "warning",
                    "Info" => "info",
                    "Success" => "success",
                    _ => ""
                };

                <tr class="log-@levelClass">
                    <td>@log.Timestamp.ToString("dd/MM/yyyy HH:mm")</td>
                    <td><span class="status @levelClass">@log.Level</span></td>
                    <td>@log.Source</td>
                    <td>@log.Message</td>
                </tr>
            }
        </tbody>
    </table>
</div>
