@model List<SiparisApi.Controllers.UserViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>👤 Kullanıcı Yönetimi</h2>

<table border="1" cellpadding="5" cellspacing="0">
    <thead>
        <tr>
            <th>ID</th>
            <th>E-posta</th>
            <th>Rol</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>@(user.IsActive ? "✅ Aktif" : "❌ Pasif")</td>
                <td>
                    <form method="post" action="/UsersUI/ToggleActive" style="display:inline;">
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit">@(user.IsActive ? "Devre Dışı Bırak" : "Aktif Et")</button>
                    </form>

                    <form method="post" action="/UsersUI/ResetPassword" style="display:inline; margin-left:5px;">
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit">🔑 Şifre Sıfırla</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
