@model List<SiparisApi.Controllers.UserViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1 class="page-title"><i class="fas fa-users-cog"></i> Kullanıcı Yönetimi</h1>
    <div style="display:flex; gap:10px;">
        <input type="text" placeholder="Kullanıcı ara..." class="form-control" style="width:180px;" />
        <a asp-action="Create" class="btn btn-primary"><i class="fas fa-user-plus"></i> Yeni Kullanıcı</a>
    </div>
</div>

<table class="data-table">
    <thead>
        <tr>
            <th>ID</th>
            <th>E-posta</th>
            <th>Rol</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    @if (user.IsActive)
                    {
                        <span class="status success">Aktif</span>
                    }
                    else
                    {
                        <span class="status danger">Pasif</span>
                    }
                </td>
                <td>
                    <form method="post" action="/UsersUI/ToggleActive" style="display:inline;">
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit" class="btn btn-warning">
                            @(user.IsActive ? "Devre Dışı Bırak" : "Aktif Et")
                        </button>
                    </form>

                    <form method="post" action="/UsersUI/ResetPassword" style="display:inline; margin-left:5px;">
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit" class="btn btn-secondary">🔑 Şifre Sıfırla</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
